%tr.node
  %td.layout
    - @depth.times do
      .nest-padding
    - if setting
      %span.title
        = image('../extensions/settings/setting.png', :alt => '')
        = link_to key.humanize, edit_admin_setting_path(setting), :title => setting.key
    - else
      %span.title.label= key.humanize
  %td
    - if setting
      = setting.protected_value

- if hash
  - @depth += 1
  - hash.each do |key, value|
    = render_node key, value
  - @depth -= 1
  - if @depth == 0
    %tr.spacer
      %td{ :colspan => 2 }